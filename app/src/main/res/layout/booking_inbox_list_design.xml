<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:background="@drawable/listview_background_stroke">
<LinearLayout
    android:id="@+id/layout_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/android_logo"/>
    <TextView
        android:id="@+id/puja_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="puja name will go hear"
        android:layout_gravity="center"/>
</LinearLayout>
<LinearLayout
    android:id="@+id/layout_two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".20"
        android:text="Puja Date"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".05"
        android:text=":"/>
    <TextView
        android:id="@+id/puja_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".75"
        android:text="15-12-2015"/>
</LinearLayout>
<LinearLayout
    android:id="@+id/layout_three"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".20"
        android:text="Address"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".05"
        android:text=":"/>
    <TextView
        android:id="@+id/user_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".75"
        android:text="user address will go hear"/>
</LinearLayout>
<LinearLayout
    android:id="@+id/four"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:text="Location "/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".05"
        android:text=":"/>
    <TextView
        android:id="@+id/user_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".75"
        android:text="user location will come hear"/>
</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:background="@color/colorPrimary"/>
<LinearLayout
    android:id="@+id/layout_five"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:id="@+id/call_user"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight=".21"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/phone_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Call"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"/>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:background="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight=".78"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/profile_icon"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="User name"
            android:gravity="center_vertical"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="5dp"
    android:background="@color/colorPrimary"/>
<LinearLayout
    android:id="@+id/layout_six"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
   <LinearLayout
       android:id="@+id/reject_action"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight=".25"
       android:orientation="horizontal">
       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:background="@drawable/ic_cab_done_holo"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="Reject"
           android:gravity="center_vertical"
           android:textSize="16sp"
           android:textStyle="bold"/>
   </LinearLayout>
    <LinearLayout
        android:id="@+id/accept_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_cab_done_holo_dark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Accept"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="30dp"
       android:layout_weight=".5"
       android:orientation="horizontal">
        <TextView
            android:id="@+id/received_datetime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6 Nov 3:14 PM"
            android:gravity="end|bottom"/>
   </LinearLayout>
</LinearLayout>
</LinearLayout>